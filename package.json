{
  "name": "@candriajs/image-tool",
  "version": "0.3.2",
  "description": "一个图片工具",
  "keywords": [
    "napi",
    "napi-rs",
    "image-tool"
  ],
  "homepage": "https://github.com/CandriaJS/image-tool",
  "bugs": {
    "url": "https://github.com/CandriaJS/image-tool/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CandriaJS/image-tool.git"
  },
  "license": "GNU General Public License v3.0",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/index.d.ts",
    "dist/index.js",
    "LICENSE",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "artifacts": "napi artifacts",
    "build": "napi build --platform --release ./dist",
    "build:debug": "napi build --platform",
    "prepublishOnly": "napi prepublish --skip-gh-release -t npm",
    "test": "ava",
    "universal": "napi universal",
    "version": "napi version",
    "publish": "napi prepublish --skip-gh-release -t npm"
  },
  "ava": {
    "timeout": "3m"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.4",
    "@types/node": "^22.15.30",
    "ava": "^6.0.1"
  },
  "packageManager": "pnpm@9.13.2",
  "engines": {
    "node": ">= 20"
  },
  "napi": {
    "name": "image-tool",
    "triples": {
      "additional": [
        "aarch64-apple-darwin",
        "aarch64-unknown-linux-gnu",
        "aarch64-linux-android"
      ]
    }
  }
}